<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_caller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuộc gọi đến"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="3dp">

        <ImageView
            android:id="@+id/btn_decline"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@drawable/bg_circle_decline"
            android:contentDescription="Từ chối"
            android:scaleType="center"
            android:layout_marginEnd="16dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_accept"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_circle_accept"
            android:contentDescription="Trả lời"
            android:scaleType="center"
            android:src="@android:drawable/ic_menu_call"
            app:tint="@color/white" />
    </LinearLayout>
</LinearLayout>
