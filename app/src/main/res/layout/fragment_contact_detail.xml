<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Module.ContactDetail.ContactDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#878686"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_top">

                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/margin_left"
                            android:backgroundTint="#616364"
                            app:cardCornerRadius="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/iv_detail_back"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleX="0.8"
                                android:scaleY="0.8"
                                android:src="@drawable/outline_chevron_left_24" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_detail_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_right"
                            android:background="@drawable/bg_btn_edit"
                            android:paddingStart="@dimen/padding_left"
                            android:paddingTop="5dp"
                            android:paddingRight="@dimen/padding_right"
                            android:paddingBottom="5dp"
                            android:text="@string/title_edit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/padding_bottom"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_contact_fullname">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginStart="7dp"
                                android:layout_marginEnd="3.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:backgroundTint="@android:color/transparent"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="0dp"
                                    app:cardMaxElevation="0dp">

                                    <ImageView
                                        android:id="@+id/imageView4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleX="0.7"
                                        android:scaleY="0.7"
                                        android:src="@drawable/ic_chat" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginStart="3.5dp"
                                android:layout_marginEnd="3.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:backgroundTint="@android:color/transparent"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="0dp"
                                    app:cardMaxElevation="0dp">

                                    <ImageView
                                        android:id="@+id/imageView6"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleX="0.7"
                                        android:scaleY="0.7"
                                        android:src="@drawable/ic_call" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginStart="3.5dp"
                                android:layout_marginEnd="3.5dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:scaleX="1.1"
                                    android:scaleY="1.1"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="0dp"
                                    app:cardMaxElevation="0dp">

                                    <ImageView
                                        android:id="@+id/imageView7"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_camera" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginStart="3.5dp"
                                android:layout_marginEnd="7dp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_button"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:backgroundTint="@android:color/transparent"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="0dp"
                                    app:cardMaxElevation="0dp">

                                    <ImageView
                                        android:id="@+id/imageView8"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleX="0.7"
                                        android:scaleY="0.7"
                                        android:src="@drawable/ic_email" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_contact_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_left"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="@dimen/margin_right"
                            android:gravity="center"
                            android:text="TextView"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_contact_company" />

                        <TextView
                            android:id="@+id/tv_contact_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="TextView"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="40dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_account" />
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_att_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_att_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_att_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_att_url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_att_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_att_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_social"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_att_social"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_att_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tv_attr_note"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:hint="@string/contact_note" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_func"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_att_contact"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/contact_detail_sent_message"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center|start"
                            android:paddingLeft="@dimen/padding_left"
                            android:text="@string/contact_detail_message"
                            android:textColor="@color/complete"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginStart="@dimen/margin_left"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/contact_detail_add_favo"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="@dimen/margin_top"
                            android:gravity="center|start"
                            android:paddingLeft="@dimen/padding_left"
                            android:text="@string/contact_detail_add_favo"
                            android:textColor="@color/complete"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginStart="@dimen/margin_left"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/contact_detail_add_list"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="@dimen/margin_top"
                            android:gravity="center|start"
                            android:paddingLeft="@dimen/padding_left"
                            android:text="@string/contact_detail_add_list"
                            android:textColor="@color/complete"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</LinearLayout>